@using Flurl.Http;
@using ShikhanobishInvoiceGenaretor.Models
@page "/{invoiceid}"
@inject IJSRuntime jsRunTime

<div class="page-content container">
    <div class="page-header text-blue-d2">
        <h1 class="page-title text-secondary-d1">
            Invoice
            <small class="page-info">
                <i class="fa fa-angle-double-right text-80"></i>
                <label>ID : </label>
                <label>@id</label>
            </small>
        </h1>

        <div class="page-tools">
            <div class="action-buttons">
                <a class="btn bg-white btn-light mx-1px text-95 hideWhenPrint" href="@invoiceid" data-title="Print" @onclick="Invoiceprint">
                    <i class="mr-1 fa fa-print text-primary-m1 text-120 w-2"></i>
                    Print
                </a>
                @*<a class="btn bg-white btn-light mx-1px text-95 hideWhenPrint" href="#" data-title="PDF">
